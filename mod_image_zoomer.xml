						<field name="@spacer" type="spacer" default="" label="" description="" />
				<field name="@spacer" type="spacer" default="&lt;h1&gt;Other&lt;/h1&gt;" label="" description="Images" />
				<field name="zoomer_id" type="text" size="20" default="3" label="Unique Module ID" description="Use this if you have more LV Imege Zoomers active and give them all an other ID" />
				<field name="loadJquery" type="radio" default="1" label="Load jquery.js" description="This options loads jquery and starts the no colnflict mode (important to use mootools things too). Leave this unchanged if you dont know what is meaned.">
				  <option value="1">YES</option>
				  <option value="2">NO</option>
				</field>
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="fieldMODULECLASSSUFFIX" />
			</fieldset>
		</fields>
	</config>
