	<description>MOD_IMAGE_ZOOMER_XML_DESCRIPTION</description>
	<files folder="module">
		<filename module="mod_image_zoomer">mod_image_zoomer.php</filename>
		<filename>index.html</filename>
		<folder>images</folder>
		<folder>language</folder>
		<folder>tmpl</folder>
	</files>
	<media destination="mod_image_zoomer" folder="media">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>
	<config>
		<fields name="fields">
			<fieldset name="basic">
				<field name="@spacer" type="spacer" default="&lt;h1&gt;Layout&lt;/h1&gt;" label="" description="Images" />
				<field name="@spacer" type="spacer" default="&lt;h4&gt;Zoom window&lt;/h4&gt;" label="" description="Zoom window" />
				<field name="zoomType" type="radio" default="standard" label="Zoom Type" description="Choose one...">
				  <option value="standard">standard</option>
				  <option value="reverse">reverse</option>
				  <option value="drag">drag</option>
				  <option value="innerzoom">innerzoom</option>
				</field>
				<field name="zoomWidth" type="text" size="7" default="200" label="Popup width in px" description="The popup window width showing the zoomed area." />
				<field name="zoomHeight" type="text" size="7" default="200" label="Popup height in px" description="The popup window height showing the zoomed area." />
				<field name="xOffset" type="text" size="10" default="5" label="xOffset in px" description="The popup window x offset from the small image." />
				<field name="yOffset" type="text" size="10" default="0" label="yOffset in px" description="The popup window y offset from the small image." />
				<field name="position" type="radio" default="right" label="position" description="The popup window position.">
				  <option value="right">right</option>
				  <option value="left">left</option>
				  <option value="top">top</option>
				  <option value="bottom">bottom</option>
				</field>
				<field name="preloadImages" type="radio" default="1" label="Preload large Images" description="Do you want to preload the large images?">
				  <option value="1">yes</option>
				  <option value="0">no</option>
				</field>
				<field name="preloadText" type="text" size="30" default="Loading..." label="Preloader Text" description="The text to show while preloading images." />
				
				<field name="showTitle" type="radio" default="1" label="Show Image Title?" description="Show a small title over the zoomed window.">
				  <option value="1">yes</option>
				  <option value="0">no</option>
				</field>
				<field name="showLens" type="radio" default="0" label="Show Lens?" description="if set to false,the small lens,over the image, won't show.">
				  <option value="1">yes</option>
				  <option value="0">no</option>
				</field>
				<field name="imageOpacity" type="text" size="5" default="0.6" label="Image opacity if reverse" description="Set the image opacity when the 'zoomType' option is set to 'reverse'." />
				<field name="alwaysOn" type="radio" default="0" label="Zoom window always ON?" description="Should the zoom window always be visible?">
				  <option value="1">yes</option>
				  <option value="0">no</option>
				</field>
						<field name="@spacer" type="spacer" default="" label="" description="" />
				<field name="@spacer" type="spacer" default="&lt;h1&gt;Images&lt;/h1&gt;" label="" description="Images" />
				<field name="zoomnumber" type="list" default="1" label="Number of Images" description="How many images do you want to zoom? Select and enter the images below.">
				  <option value="1">1</option>
				  <option value="2">2</option>
				  <option value="3">3</option>
				  <option value="4">4</option>
				  <option value="5">5</option>
				  <option value="6">6</option>
				  <option value="7">7</option>
				  <option value="8">8</option>
				  <option value="9">9</option>
				  <option value="10">10</option>
				</field>
				<field name="@spacer" type="spacer" default="&lt;h4&gt;SMALL Images | LARGE Images | Image Titles&lt;/h4&gt;" label="" description="SMALL and LARGE Images" />
				<field name="small_image1" type="text" size="70" default="modules/mod_lv_image_zoomer_2/demo/small.jpg" label="Small Image 1" description="SMALL image: Example: http://your-image.com/SMALL.jpg" />
				<field name="large_image1" type="text" size="70" default="modules/mod_lv_image_zoomer_2/demo/large.jpg" label="Large Image 1" description="LARGE image: Example: http://your-image.com/LARGE.jpg"  />
				<field name="linkTitle1" type="text" size="70" default="You see: Image 1" label="Image title 1" description="Enter a title that will be shown in the small zoom window, if th option is enabled." />
						<field name="@spacer" type="spacer" default="" label="" description="" />
				<field name="small_image2" type="text" size="70" default="" label="Small Image 2" description="SMALL image: Example: http://your-image.com/SMALL.jpg" />
				<field name="large_image2" type="text" size="70" default="" label="Large Image 2" description="LARGE image: Example: http://your-image.com/LARGE.jpg"  />
